{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Pedestrian Counts over the week",
    "data": {
        "url": "data/PedCountWeek.csv",
        "format":{"type": "csv"}
    },

    "width":"container",

    "mark":{
        "type": "circle"
    },

    "encoding": {
        "x":{
            "field": "Date_Time",
            "type": "ordinal",
            "timeUnit": "hours"
        },
        "y":{
            "field":"Date_Time",
            "type": "ordinal",
            "timeUnit": "day",
            "sort":["Monday","Tuesday","Wednesday","Thursday","Friday","Saturday","Sunday"]
        },
        "size":{
            "field": "Hourly_Counts",
            "type": "quantitative",
            "aggregate": "sum"
        }
    },
    "config": {}

}